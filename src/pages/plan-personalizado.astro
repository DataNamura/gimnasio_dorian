---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { FaCheck, FaWhatsapp } from 'react-icons/fa';
import { IoLogoInstagram } from 'react-icons/io5';
---

<Layout title="Plan Personalizado">
    <Header />
    
    <main class="text-white overflow-hidden">
        <!-- Hero Section -->
        <section class="relative min-h-[60vh] flex items-center justify-center">
            <div class="absolute inset-0" style="z-index: 1;">
                <img 
                    src="https://images.unsplash.com/photo-1601422407692-ec4eeec1d9b3?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80"
                    alt="Entrenamiento personalizado"
                    class="w-full h-full object-cover"
                />
                <div class="absolute inset-0 bg-black/70"></div>
            </div>
            
            <div class="relative z-10 container mx-auto px-4 text-center">
                <h1 class="text-5xl md:text-6xl font-bold mb-6">
                    <span class="text-white">Plan</span> <span class="text-gym-red">Personalizado</span>
                </h1>
                <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
                    Alcanza tus objetivos con un plan diseñado exclusivamente para ti
                </p>
                <a 
                    href="https://wa.me/34695270627?text=Hola,%20me%20interesa%20el%20plan%20personalizado" 
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 bg-gym-red text-white py-4 px-8 rounded-lg text-lg font-semibold hover:bg-red-700 transition-colors duration-300"
                >
                    <FaWhatsapp className="text-2xl" />
                    Consulta Gratuita
                </a>
            </div>
        </section>

        <!-- Beneficios -->
        <section class="py-20 relative">
            <div class="container mx-auto px-4">
                <h2 class="text-4xl font-bold text-center mb-16" data-aos="fade-up">
                    <span class="text-white">¿Por qué elegir un</span> <span class="text-gym-red">Plan Personalizado?</span>
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
                    <!-- Card 1 -->
                    <div class="bg-zinc-900/50 p-8 rounded-xl border border-white/5 shadow-2xl backdrop-blur-sm" data-aos="fade-up">
                        <img 
                            src="https://images.unsplash.com/photo-1599058945522-28d584b6f0ff?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1669&q=80"
                            alt="Atención personalizada"
                            class="w-full h-48 object-cover rounded-lg mb-6"
                        />
                        <h3 class="text-2xl font-bold text-white mb-4">Atención Personalizada</h3>
                        <ul class="space-y-3">
                            <li class="flex items-start gap-3 text-gray-300">
                                <FaCheck className="text-gym-red mt-1 flex-shrink-0" />
                                <span>Entrenador personal dedicado a tu progreso</span>
                            </li>
                            <li class="flex items-start gap-3 text-gray-300">
                                <FaCheck className="text-gym-red mt-1 flex-shrink-0" />
                                <span>Evaluación completa de tu condición física</span>
                            </li>
                            <li class="flex items-start gap-3 text-gray-300">
                                <FaCheck className="text-gym-red mt-1 flex-shrink-0" />
                                <span>Ajustes continuos según tu evolución</span>
                            </li>
                        </ul>
                    </div>

                    <!-- Card 2 -->
                    <div class="bg-zinc-900/50 p-8 rounded-xl border border-white/5 shadow-2xl backdrop-blur-sm" data-aos="fade-up" data-aos-delay="100">
                        <img 
                            src="https://images.unsplash.com/photo-1490645935967-10de6ba17061?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1738&q=80"
                            alt="Plan nutricional"
                            class="w-full h-48 object-cover rounded-lg mb-6"
                        />
                        <h3 class="text-2xl font-bold text-white mb-4">Plan Nutricional</h3>
                        <ul class="space-y-3">
                            <li class="flex items-start gap-3 text-gray-300">
                                <FaCheck className="text-gym-red mt-1 flex-shrink-0" />
                                <span>Dieta personalizada según tus objetivos</span>
                            </li>
                            <li class="flex items-start gap-3 text-gray-300">
                                <FaCheck className="text-gym-red mt-1 flex-shrink-0" />
                                <span>Recetas y plan de comidas semanal</span>
                            </li>
                            <li class="flex items-start gap-3 text-gray-300">
                                <FaCheck className="text-gym-red mt-1 flex-shrink-0" />
                                <span>Guía de suplementación si es necesaria</span>
                            </li>
                        </ul>
                    </div>

                    <!-- Card 3 -->
                    <div class="bg-zinc-900/50 p-8 rounded-xl border border-white/5 shadow-2xl backdrop-blur-sm" data-aos="fade-up" data-aos-delay="200">
                        <img 
                            src="https://images.unsplash.com/photo-1461088945293-14020914d58d?q=80&w=500"
                            alt="Seguimiento continuo"
                            class="w-full h-48 object-cover rounded-lg mb-6"
                        />
                        <h3 class="text-2xl font-bold text-white mb-4">Seguimiento Continuo</h3>
                        <ul class="space-y-3">
                            <li class="flex items-start gap-3 text-gray-300">
                                <FaCheck className="text-gym-red mt-1 flex-shrink-0" />
                                <span>Soporte por WhatsApp 24/7</span>
                            </li>
                            <li class="flex items-start gap-3 text-gray-300">
                                <FaCheck className="text-gym-red mt-1 flex-shrink-0" />
                                <span>Seguimiento semanal de progreso</span>
                            </li>
                            <li class="flex items-start gap-3 text-gray-300">
                                <FaCheck className="text-gym-red mt-1 flex-shrink-0" />
                                <span>Ajustes del plan según resultados</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <!-- Proceso -->
        <section class="relative py-20 bg-gradient before:content-[''] before:absolute before:inset-0 before:bg-[linear-gradient(to_right,rgba(255,255,255,0.05)_1px,transparent_1px),linear-gradient(to_bottom,rgba(255,255,255,0.05)_1px,transparent_1px)] before:bg-[size:30px_30px] before:pointer-events-none before:z-0">
            <div class="container mx-auto px-4 relative z-10">
                <div class="text-center mb-12">
                    <h2 class="text-4xl font-bold mb-4" data-aos="fade-up">
                        <span class="text-white">Cómo</span> <span class="text-gym-red">Funciona</span>
                    </h2>
                    <p class="text-lg text-gray-300 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100">
