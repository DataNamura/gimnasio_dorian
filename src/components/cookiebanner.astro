<style>
    @keyframes slideUp {
        from {
            transform: translateY(100%);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .cookie-banner-show {
        animation: slideUp 0.5s ease forwards;
    }
</style>

<script>
    const cookieBanner = document.getElementById('cookie-banner');
    const acceptButton = document.getElementById('accept-cookies');
    const configureButton = document.getElementById('configure-cookies');

    // Funci칩n para mostrar el banner
    const showBanner = () => {
        if (cookieBanner) {
            cookieBanner.style.transform = 'translateY(0)';
            cookieBanner.style.opacity = '1';
        }
    };

    // Funci칩n para ocultar el banner
    const hideBanner = () => {
        if (cookieBanner) {
            cookieBanner.style.transform = 'translateY(100%)';
            cookieBanner.style.opacity = '0';
        }
    };

    // Comprobar si ya se han aceptado las cookies
    if (!localStorage.getItem('cookies-accepted')) {
        // Mostrar el banner despu칠s de un peque침o delay
        setTimeout(showBanner, 1000);
    }

    acceptButton?.addEventListener('click', () => {
        localStorage.setItem('cookies-accepted', 'true');
        hideBanner();
    });

    configureButton?.addEventListener('click', () => {
        window.location.href = '/politica-de-cookies';
    });
</script>
