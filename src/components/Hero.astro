<section id="hero" class="relative min-h-[90vh] md:min-h-screen flex items-center justify-center bg-black text-white overflow-hidden py-16 md:py-32">
    <!-- Imagen de fondo con overlay -->
    <div class="absolute inset-0 z-0">
        <img
            src="https://images.unsplash.com/photo-1534438327276-14e5300c3a48?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80"
            alt="Gimnasio Dorian - El Médano, Tenerife"
            class="absolute inset-0 w-full h-full object-cover"
            loading="lazy"
            srcset="
                https://images.unsplash.com/photo-1534438327276-14e5300c3a48?ixlib=rb-4.0.3&auto=format&fit=crop&w=480&q=80 480w,
                https://images.unsplash.com/photo-1534438327276-14e5300c3a48?ixlib=rb-4.0.3&auto=format&fit=crop&w=768&q=80 768w,
                https://images.unsplash.com/photo-1534438327276-14e5300c3a48?ixlib=rb-4.0.3&auto=format&fit=crop&w=1024&q=80 1024w,
                https://images.unsplash.com/photo-1534438327276-14e5300c3a48?ixlib=rb-4.0.3&auto=format&fit=crop&w=1470&q=80 1470w
            "
            sizes="(max-width: 480px) 480px, (max-width: 768px) 768px, (max-width: 1024px) 1024px, 1470px"
        />
        <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/50 to-black"></div>
    </div>

    <!-- Contenido -->
    <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center" data-aos="fade-up" data-aos-duration="1000">
            <h1 class="text-4xl sm:text-5xl md:text-7xl font-bold mb-4 md:mb-6 tracking-tight">
                Gimnasio <span class="text-gym-red">Dorian</span>
            </h1>
            <p class="text-lg sm:text-xl md:text-2xl text-gray-300 mb-8 md:mb-12 max-w-2xl mx-auto tracking-wide">
                El mejor gimnasio en El Médano, Tenerife. Musculación, cardio y entrenamiento personalizado.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center max-w-lg mx-auto">
                <a 
                    href="/plan-personalizado"
                    class="px-6 sm:px-8 py-3 sm:py-4 bg-gym-red text-white font-bold rounded-lg hover:bg-red-700 transition-all duration-300 w-full sm:w-auto text-center text-base sm:text-lg hover:scale-105 shadow-lg shadow-red-500/20 border-b-[3px] border-red-800"
                >
                    Plan Personalizado
                </a>
                <a 
                    href="#plan-personalizado"
                    class="px-6 sm:px-8 py-3 sm:py-4 bg-black/40 backdrop-blur-sm text-white font-bold rounded-lg hover:bg-black/60 transition-all duration-300 w-full sm:w-auto text-center text-base sm:text-lg border border-white/20 hover:scale-105 hover:border-white/40 shadow-lg shadow-black/10"
                >
                    Empezar Ahora
                </a>
                <a 
                    href="#contacto"
                    class="px-6 sm:px-8 py-3 sm:py-4 border-2 border-white/30 text-white font-bold rounded-lg hover:bg-white/10 transition-all duration-300 w-full sm:w-auto text-center text-base sm:text-lg backdrop-blur-sm hover:scale-105 hover:border-white/60"
                >
                    Contactar
                </a>
            </div>
        </div>
    </div>
</section>
