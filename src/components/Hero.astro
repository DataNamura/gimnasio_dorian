<section id="hero" class="relative min-h-screen flex items-center justify-center bg-black text-white overflow-hidden py-32">
    <!-- Imagen de fondo con overlay -->
    <div class="absolute inset-0 z-0">
        <img
            src="https://images.unsplash.com/photo-1534438327276-14e5300c3a48?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80"
            alt="Gimnasio Dorian - El Médano, Tenerife"
            class="absolute inset-0 w-full h-full object-cover"
            loading="lazy"
        />
        <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/50 to-black"></div>
    </div>

    <!-- Contenido -->
    <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center" data-aos="fade-up" data-aos-duration="1000">
            <h1 class="text-5xl md:text-7xl font-bold mb-6 tracking-tight">
                Gimnasio <span class="text-gym-red">Dorian</span>
            </h1>
            <p class="text-xl md:text-2xl text-gray-300 mb-12 max-w-2xl mx-auto tracking-wide">
                El mejor gimnasio en El Médano, Tenerife. Musculación, cardio y entrenamiento personalizado.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                <a 
                    href="/plan-personalizado"
                    class="px-8 py-4 bg-red-600 text-white font-bold rounded-lg hover:bg-red-700 transition-colors duration-300 w-full sm:w-auto text-center"
                >
                    Plan Personalizado
                </a>
                <a 
                    href="#plan-personalizado"
                    class="px-8 py-4 bg-black/30 backdrop-blur-sm text-white font-bold rounded-lg hover:bg-black/50 transition-colors duration-300 w-full sm:w-auto text-center border border-white/10"
                >
                    Empezar Ahora
                </a>
                <a 
                    href="#contacto"
                    class="px-8 py-4 border-2 border-white/20 text-white font-bold rounded-lg hover:bg-white/10 transition-colors duration-300 w-full sm:w-auto text-center"
                >
                    Contactar
                </a>
            </div>
        </div>
    </div>
</section>
