	</head>
	<body class="bg-black text-white font-['Inter']">
		<slot />
		<script>
			// Register Service Worker
			if ('serviceWorker' in navigator) {
				window.addEventListener('load', () => {
					navigator.serviceWorker.register('/sw.js')
						.then(registration => {
							console.log('Service Worker registrado con éxito:', registration.scope);
						})
						.catch(error => {
							console.error('Error al registrar el Service Worker:', error);
						});
				});
			}

			// Lazy loading de imágenes con TypeScript
			document.addEventListener('DOMContentLoaded', () => {
				// Asegurarnos de que estamos trabajando con HTMLImageElement
				const lazyImages: NodeListOf<HTMLImageElement> = document.querySelectorAll('img[loading="lazy"]');
				
				if ('loading' in HTMLImageElement.prototype) {
					// Navegadores modernos con soporte nativo de lazy loading
					lazyImages.forEach((img: HTMLImageElement) => {
						const dataSrc = img.getAttribute('data-src');
						if (dataSrc) {
							img.src = dataSrc;
							img.removeAttribute('data-src');
						}
					});
				} else {
					// Fallback para navegadores antiguos
					const script = document.createElement('script');
					script.src = 'https://cdnjs.cloudflare.com/ajax/libs/lazysizes/5.3.2/lazysizes.min.js';
					document.body.appendChild(script);

					// Configurar clases para lazysizes
					lazyImages.forEach((img: HTMLImageElement) => {
						img.classList.add('lazyload');
						const dataSrc = img.getAttribute('data-src');
						if (dataSrc) {
							img.setAttribute('data-src', dataSrc);
						}
					});
				}
			});
		</script>
	</body>
</html>

<style is:global>
	:root {
		--accent: #dc2626;
	}

	html {
		scroll-behavior: smooth;
		text-rendering: optimizeLegibility;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	body {
		margin: 0;
		min-height: 100vh;
		overflow-x: hidden;
	}

	/* Scrollbar Styles - Más sutil */
	::-webkit-scrollbar {
		width: 8px;
	}

	::-webkit-scrollbar-track {
		background: #1a1a1a;
	}

	::-webkit-scrollbar-thumb {
		background: #333;
		border-radius: 4px;
	}

	::-webkit-scrollbar-thumb:hover {
		background: #444;
	}

	/* Mejoras de rendimiento */
	* {
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		text-rendering: optimizeLegibility;
	}

	/* Transiciones suaves */
	.transition-all {
		transition-duration: 300ms;
		transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
	}

	/* Mejora de animaciones */
	[data-aos] {
		backface-visibility: hidden;
		transform: translateZ(0);
		perspective: 1000px;
	}

	/* Optimizaciones táctiles */
	@media (hover: none) {
		* {
			-webkit-tap-highlight-color: transparent;
		}
	}

	/* Optimizaciones de rendimiento */
	img {
		content-visibility: auto;
	}

	/* Mejoras de accesibilidad */
	:focus {
		outline: 2px solid var(--accent);
		outline-offset: 2px;
	}

	/* Soporte para modo oscuro del sistema */
	@media (prefers-color-scheme: dark) {
		html {
			color-scheme: dark;
		}
	}
</style>
